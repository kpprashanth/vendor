<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.navigationdrawerexample.Order_service"
    android:id="@+id/order_service_details">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ORDER DETAILS"
        android:id="@+id/detail_heading"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffff426c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAME: "
        android:id="@+id/nametag"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/detail_heading"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:textSize="20dp"
        android:textColor="#ffff5885" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRASHANTHA"
        android:id="@+id/name"
        android:layout_alignTop="@+id/nametag"
        android:layout_alignLeft="@+id/order_id"
        android:layout_alignStart="@+id/order_id"
        android:textSize="20dp"
        android:textColor="#ff847fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PHONE:"
        android:id="@+id/order_tag"
        android:layout_below="@+id/nametag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffff5885" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="998609821"
        android:id="@+id/order_id"
        android:layout_alignTop="@+id/order_tag"
        android:layout_centerHorizontal="true"
        android:textColor="#ff847fff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ITEM:"
        android:id="@+id/item_tag"
        android:layout_below="@+id/order_tag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffff5885" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PIZZA"
        android:id="@+id/item"
        android:layout_above="@+id/address_tag"
        android:layout_alignLeft="@+id/order_id"
        android:layout_alignStart="@+id/order_id"
        android:textColor="#ff847fff"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ADDRESS:"
        android:id="@+id/address_tag"
        android:layout_below="@+id/item_tag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffff5885" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="// Handle action bar item clicks here. The action bar will         // automatically handle clicks on the Home/Up button, so long         // as you specify a parent activity in AndroidManifest.xml."
        android:id="@+id/address"
        android:textSize="15dp"
        android:textColor="#ff847fff"
        android:background="@drawable/back"
        android:layout_alignTop="@+id/address_tag"
        android:layout_alignLeft="@+id/item"
        android:layout_alignStart="@+id/item"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRICE:"
        android:id="@+id/price_tag"
        android:layout_below="@+id/address"
        android:layout_alignRight="@+id/nametag"
        android:layout_alignEnd="@+id/nametag"
        android:textSize="20dp"
        android:textColor="#ffff5885"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rs 200"
        android:id="@+id/price"
        android:layout_alignLeft="@+id/address"
        android:layout_alignStart="@+id/address"
        android:textSize="20dp"
        android:textColor="#ff8481ff"
        android:layout_alignTop="@+id/price_tag" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACCEPT"
        android:id="@+id/accept"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/login_selector"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REJECT"
        android:id="@+id/reject"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/address"
        android:layout_alignEnd="@+id/address"
        android:background="@drawable/login_selector"

        />
</RelativeLayout>
